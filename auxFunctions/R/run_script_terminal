# main script download dataset

# clean memory
rm=list(ls())

# packages
require(install.load)
install.load::install_load('BETS')

# source (if you source functions os the other script)
# source(../function.R)

#!/usr/bin/env Rscript
args = commandArgs(trailingOnly=TRUE)

# run into terminal: Rscript --vanilla main.R c(10777,4447) "2001-01-01" "2016-01-01"

# test if there is at least one argument: if not, return an error
if (length(args)==0) {
  stop("At least one argument must be supplied (input file).n", call.=FALSE)
} else if (length(args)==1) {
  # default output file
  args[2] = "out.txt"
}

funcao1 <- function(code , init, end){

  #' @param code: codigo que se quer obter as bases
  #' @param init: periodo inicial
  #' @param end: periodo final
  
  data <- BETSget(code = ,from = init, to = end)
  return(data)
}
